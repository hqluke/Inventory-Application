<html lang="en">
    <head>
        <title>Add Food</title>
    </head>
    <body>
        <h1>Add Food</h1>
        <% if (errors && errors.length > 0) { %>
        <div class="error">
            <ul>
                <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
                <% }); %>
            </ul>
        </div>
        <% } %>
        <form action="/food/add" method="POST">
            <label for="name">Name:</label>
            <input
                type="text"
                name="name"
                id="name"
                value="<%= name || '' %>"
            />
            <input type="submit" value="Add" />
        </form>
        <a href="/">Home</a>
        <a href="/food">Back to food</a>
    </body>
</html>
